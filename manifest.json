{
    "manifest_version": 3,
    "name": "News Summarizer",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.webp"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",

    "host_permissions":[
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}